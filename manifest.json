{
  "name": "Library Extension by Metis",
  "manifest_version": 3,
  "version": "0.1.0",

  "permissions": ["contextMenus", "storage", "activeTab", "tabs", "sidePanel", "scripting", "https://api.groq.com/"],
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "action": { "default_title": "Generate a summary" },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["dialog/dialog.html", "style.css", "sidebar/sidebar.html", "sidebar/sidebar.js", "dialog/dialog.js", "sw-loader.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
